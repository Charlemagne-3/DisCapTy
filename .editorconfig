# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 4
max_line_length = 99
end_of_line = crlf
charset = utf-8
trim_trailing_whitespace = false
insert_final_newline = true

[{*.yml,*.yaml,*.json}]
indent_style = space
indent_size = 2
